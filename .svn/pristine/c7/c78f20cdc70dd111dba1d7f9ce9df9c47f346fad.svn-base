template <int Dim>
void KDTree<Dim>::select(int start, int end, int k, int curDim)
{
  if(start >= end)
    return;
  int split = partition(start, end, curDim);
  int len = split - start + 1;
  if(len == k)
    return;
  if(k < len)
    return select(start, split - 1, k, curDim);
  return select(split + 1, end, k - len, curDim);
