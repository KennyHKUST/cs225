template <int Dim>
void KDTree<Dim>::buildTree(int start, int end, int curDim)
{
  if(start >= end || end < 0)
    return;
  int medium = (start + end) / 2;
  select(start, end, medium, curDim);
  if(start < medium -1)
    buildTree(start, medium - 1, (curDim + 1) % Dim);
  if(end > medium + 1)
    buildTree(medium + 1, end, (curDim + 1) % Dim);
